{
    "name": "stevelipinski/oauth2-clover",
    "description": "Clover OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "require": {
        "league/oauth2-client": "^2.7"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpunit/phpunit": "^10.0|^11.0",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "authors": [
        {
            "name": "Steve Lipinski",
            "homepage": "https://github.com/stevelipinski",
            "role": "Developer"
        },
        {
            "name": "Woody Gilk",
            "homepage": "https://github.com/shadowhand",
            "role": "Contributor"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authentication",
        "idp",
        "identity",
        "sso",
        "single sign on",
        "clover"
    ],
    "autoload": {
        "psr-4": {
            "Stevelipinski\\OAuth2\\Client\\Provider\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stevelipinski\\OAuth2\\Client\\Test\\Provider\\": "tests/src/"
        }
    }
}
